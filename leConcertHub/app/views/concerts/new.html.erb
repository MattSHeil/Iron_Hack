<% if session[:errors] %>
	<% session[:errors].each do | error | %>
		<%= error %>
		<br>
	<% end %>
	<% session[:errors] = nil %>
<% end %>

<%= form_for @concert do | f | %>
	<%= f.label :artist %>
	<%= f.text_field :artist %>
	<br>
	<%= f.label :venue %>
	<%= f.text_field :venue %>
	<br>
	<%= f.label :city %>
	<%= f.text_field :city %>
	<br>
	<%= f.label :date %>
	<%= f.datetime_local_field :date%>
	<br>
	<%= f.label :price %>
	<%= f.number_field :price, :step => 'any' %>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br>
	<%= f.submit 'Save' %>
	<button>
		<%= link_to 'Home', home_path %>
	</button>
<% end %>