<% if User.find_by(id: params[:id]) == current_user %>
	<h1>Welcome <%= @user.name %></h1>
	<h1>Sup dude this yo page</h1>
	<h2>These yo sandwiches</h2>
	<ul>
		<% @user.sandwiches.each do | singleSub | %>
			<h3><li><%= singleSub.name %></li></h3>
		<% end %>
	</ul>
	<%= link_to 'Log Out', destroy_user_session_path, method: 'DELETE' %>
<% else %>
	<h1>Welcome to <%= @user.name %> page</h1>
	<h2>You cant see his snadwiches ...</h2>
	<%= link_to 'Back to yo page', the_user_path(current_user) %>
<% end %>