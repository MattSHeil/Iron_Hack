<h1>Title: <%= @post.title %></h1>

<%= image_tag(@post.gif_url) %><br>
<h3>Votes: <%= @post.votes %></h3>
<ul> <h3>Labels:</h3>
	<% @post.labels.each do | singleLabel | %>
		<li><h4><%= singleLabel.name %></h4></li>
	<% end %>
</ul>

<form action="/posts/<%=@post.id%>/down" method="post" >
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<button type="submit">
		<%= image_tag("tDown") %>
	</button>
</form>
	
<form action="/posts/<%=@post.id%>/up" method="post" >
	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
	<button type="submit">
		<%= image_tag("tUP") %>
	</button>
</form>