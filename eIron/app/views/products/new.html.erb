
<%= form_for [@user, @product] do | f | %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br><br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br><br>
	<%= f.label :deadline %>
	<%= f.date_field :deadline %>
	<br><br>
	<%= f.submit 'Create' %>
	<button>
		<%= link_to 'Cancel', user_products_path(@user) %>
	</button>
<% end %>